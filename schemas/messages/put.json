{
    "type": "object",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://signalk.org/specification/1.0.0/schemas/delta.json#",
    "title": "SignalK Delta message schema",
    "description": "Schema for defining updates and subscriptions to parts of a SignalK data model, for example for communicating updates of data",
    "required": [
      "requestId", "put"
    ],
    "properties": {
        "requestId": {
          "type": "string",
          "pattern": "[0-9a-fA-F]{8}\\-[0-9a-fA-F]{4}\\-[0-9a-fA-F]{4}\\-[0-9a-fA-F]{4}\\-[0-9a-fA-F]{12}"
        },
        "put": {
            "type": "object",
            "properties": {
                "path": {
                    "type": "string"
                },
                "value": {
                    "type": [
                        "string",
                        "number",
                        "object",
                        "boolean",
                        "null"
                    ]
                }
            }
        }
    }
}
  