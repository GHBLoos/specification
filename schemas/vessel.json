        },
        "environmental": {
            "$ref": "groups/environmental.json#"
        },
        "navigation": {
            "$ref": "groups/navigation.json#"
        },
        "alarms": {
            "$ref": "groups/alarms.json#"
        },
	"steering": {
            "$ref": "groups/steering.json#"
        },
        "source": {
            "$ref": "definitions.json#/definitions/source"
        },
        "timestamp": {
